<%= form_with(model: friend, local: true) do |form| %>
    <div class="field">
        <%= form.label :Name %>
        <%= form.text_field :name %>
    </div>

    <div class="field">
        <%= form.label :Birthday %>
        <%= form.date_select :birthday, discard_year: true, default: { day: 1, month: 1 } %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>