<div class="form-container gift-fields">
    <div class="form-group">
        <div>
            <%= f.label :description, "Description" %>
            <span class="required">*</span>
        </div>
        <%= f.text_field :description %>
    </div>

    <div class="form-group">
        <%= f.label :price, "Price" %>
        <%= f.text_field :price %>
    </div>

    <div class="form-group">
        <%= f.label :link, "Link" %>
        <%= f.text_field :link %>
    </div>

    <%= link_to "Remove", "#", class: "remove-gift" %>
</div>